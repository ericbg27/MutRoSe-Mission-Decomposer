<configuration>
    <robots_db>
        <type>file</type>
        <file_type>xml</file_type>
        <path>xml/Room Preparation/Robots_db.xml</path>
        <xml_root>robots_db</xml_root>
    </robots_db>

    <world_db>
        <type>file</type>
        <file_type>xml</file_type>
        <path>xml/Room Preparation/World_db.xml</path>
        <xml_root>world_db</xml_root>
    </world_db>

    <output>
        <output_type>file</output_type>
        <file_path>xml/Room Preparation/task_output.xml</file_path>
        <file_type>xml</file_type>
    </output>

    <location_types>
        <type>Room</type>
    </location_type>

    <type_mapping>
        <mapping>
            <hddl_type>room</hddl_type>
            <ocl_type>Room</ocl_type>
        </mapping>
    </type_mapping>

    <var_mapping>
        <mapping>
            <task_id>AT1</task_id>
            <map gm_var="current_room" hddl_var="?rm"/>
        </mapping>
         <mapping>
            <task_id>AT2</task_id>
            <map gm_var="sanitization_room" hddl_var="?srm"/>
        </mapping>
         <mapping>
            <task_id>AT3</task_id>
            <map gm_var="current_room" hddl_var="?rm"/>
        </mapping>
    </var_mapping>

    <!--Here we will map HDDL functions, predicates and everything we need to real elements-->
    <!--We can also map HDDL types to OCL types used in the Goal Model or even to software classes-->
    <semantic_mapping>
        <mapping>
            <type>attribute</type>
            <name>is_clean</name>
            <relation>Room</relation>
            <belongs_to>world_db</belongs_to>
            <mapped_type>predicate</mapped_type>
            <map>
                <pred>clean</pred> 
                <arg_sorts number="1">room</arg_sorts>
            </map>
        </mapping>
        <mapping>
            <type>attribute</type>
            <name>is_prepared</name>
            <relation>Room</relation>
            <belongs_to>world_db</belongs_to>
            <mapped_type>predicate</mapped_type>
            <map>
                <pred>prepared</pred>
                <arg_sorts number="1">room</arg_sorts>
            </map>
        </mapping>
        <mapping>
            <type>attribute</type>
            <name>is_sanitized</name>
            <relation>robot</relation>
            <belongs_to>robots_db</belongs_to>
            <mapped_type>predicate</mapped_type>
            <map>
                <pred>sanitized</pred> 
                <arg_sorts number="1">robot</arg_sorts>
            </map>
        </mapping>
        <mapping>
            <type>attribute</type>
            <name>door_open</name>
            <relation>Room</relation>
            <belongs_to>world_db</belongs_to>
            <mapped_type>predicate</mapped_type>
            <map>
                <pred>door-open</pred> 
                <arg_sorts number="1">room</arg_sorts>
            </map>
        </mapping>
    </semantic_mapping>
    
    <!--
        Types here are:
            - predicate
            - prob_predicate (This is a single value for one predicate)
            - prob_predicates (This is the initialization using the probabilistic keyword)
            - function
